{
    "name": "vilnisgr/env-editor",
    "description": "Modern PHP 8.3 library for programmatically editing dotenv files. Preserve comments, formatting, and variable order while reading or writing .env files.",
    "type": "library",
    "license": "MIT",
    "keywords": ["env", "dotenv", "schema", "validation", "dto", "config", "fluent"],
    "require": {
        "php": ">=8.3",
        "ext-ctype": "*"
    },

    "autoload": {
        "psr-4": {
            "VilnisGr\\EnvEditor\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "VilnisGr\\EnvEditor\\Tests\\": "tests/"
        }
    },

    "authors": [
        {
            "name": "vilnisgrinbergs",
            "email": "vilnisgrinbergs22@proton.me"
        }
    ],

    "require-dev": {
        "phpunit/phpunit": "^10.5"
    }
}
